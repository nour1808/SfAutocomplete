{% extends 'base.html.twig' %}

{% block title %}Multiple index{% endblock %}

{% block body %}
    <h1>Multiple index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for multiple in multiples %}
            <tr>
                <td>{{ multiple.id }}</td>
                <td>{{ multiple.name }}</td>
                <td>
                    <a href="{{ path('app_multiple_show', {'id': multiple.id}) }}" class='btn btn-info'>show</a>
                    <a href="{{ path('app_multiple_edit', {'id': multiple.id}) }}" class='btn btn-info'>edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_multiple_new') }}" class='btn btn-primary'>Create new</a>
{% endblock %}
